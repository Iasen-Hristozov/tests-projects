      <!-- xmlns:android="http://schemas.android.com/apk/res/android" -->
      <!-- android:id="@+id/common_toolbar" -->
      <!-- android:layout_width="match_parent" -->
      <!-- android:layout_height="?attr/actionBarSize" -->


      <!-- /> -->

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:text="@string/et_title"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/colorBlue" />

      <com.discworld.booksbag.Title
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         custom:lineSize="1dp"
         custom:text="Testtttt"
         custom:color="@color/colorBlue" >

      </com.discworld.booksbag.Title>

      <ImageView
         android:id="@+id/imageView2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/list_divide" />

      <EditText
         android:id="@+id/et_title"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:contentDescription="@string/et_title"
         android:hint="@string/et_title" />

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/lbl_authors"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlue" />

         <ImageButton
            android:id="@+id/ib_add_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_input_add" />
      </RelativeLayout>

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/list_divide" />

      <!-- <include -->
      <!-- layout="@layout/row_author" -->
      <!-- android:layout_width="wrap_content" -->
      <!-- android:layout_height="wrap_content"/> -->

      <LinearLayout
         android:id="@+id/ll_authors"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >
      </LinearLayout>

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:text="@string/lbl_description"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/colorBlue" />

      <ImageView
         android:id="@+id/imageView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/list_divide" />

      <EditText
         android:id="@+id/et_description"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:hint="@string/hnt_description"
         android:inputType="textMultiLine" />

      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginTop="60dp"
         android:text="@string/lbl_category"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/colorBlue" />

      <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@drawable/list_divide" />

      <com.discworld.booksbag.FieldAutoCompleteTextView
         android:id="@+id/titleAutoCompleteTextView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         custom:color="@color/colorBlue"
         custom:lineSize="1dp"
         custom:text="ttttaa" >

      </com.discworld.booksbag.FieldAutoCompleteTextView>

      <com.discworld.booksbag.dto.MultiSpinner
         android:id="@+id/multi_spinner"
         style="?android:attr/spinnerStyle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:gravity="left"
         android:spinnerMode="dropdown" />

      <Button
         android:id="@+id/button1"
         style="?android:attr/spinnerStyle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="100dp"
         android:text="Button"
         android:textAppearance="?android:attr/textAppearanceMedium"
         />
<!--       android:textColor="?android:color/black"  -->

   </LinearLayout>

</ScrollView>